[[ -z "$2" ]] && set -- "$1" "$(basename "$1" .md).pdf"
script_dir=$(dirname $0)
client_dir=$PWD

cd $script_dir
mkdir tmp

python3 scripts/update_md.py $client_dir/$1 tmp/
python3 scripts/replace.py $client_dir/$1 tmp/_intro.pdf
pandoc tmp/_updated_md.md -o $client_dir/$2 \
	--template=template.tex --pdf-engine=xelatex \
	--listings --pdf-engine-opt=-shell-escape

rm -rf tmp
cd $client_dir